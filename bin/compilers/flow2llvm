#!python

import argparse
import llvm.core as llvmc
import llvm.ee as llvmee

import logging
log = logging.getLogger("flow2llvm")

import fbml
from fbml.extensions.llvm import LLVMMethodCreater
from fbml.extensions.llvm import compileToLLVM

logging.basicConfig(level=logging.DEBUG)

def main():
    args = parseArgs()

    ext = fbml.getExtensions('MethodName','Type')
    module = fbml.importModule(args.modulename,ext)
    llvm_module = compileToLLVM(module)
    print(llvm_module)



def parseArgs():
    parser = argparse.ArgumentParser()
    parser.add_argument('modulename',help='the fullpath id of module')
    args = parser.parse_args()
    return args

if __name__ == '__main__': main()
